exec systemctl --user import-environment DISPLAY WAYLAND_DISPLAY SWAYSOCK
exec hash dbus-update-activation-environment 2>/dev/null && \
     dbus-update-activation-environment --systemd DISPLAY WAYLAND_DISPLAY SWAYSOCK

# vars
set $mod Mod1

set $left h
set $down j
set $up k
set $right l

set $term alacritty
set $menu fuzzel

set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# input
input "1267:12486:ELAN1200:00_04F3:30C6_Touchpad" {
  dwt enabled
  tap enabled
  natural_scroll enabled
}

# display

set $d_main eDP-1
set $d_ext HDMI-A-1
output $d_main {
  #scale 1.25
  pos 0 0
  bg /home/yamu/Pictures/Wallpaper/wallhaven-kxmz11_1920x1080.png fill
}

output $d_ext {
  mode 1920x1080@239.964Hz
  pos 1920 0
  bg /home/yamu/Pictures/Wallpaper/wallhaven-kxmz11_1920x1080.png fill
}

workspace {
  $ws1  output $d_main
  $ws2  output $d_main
  $ws3  output $d_main
  $ws4  output $d_main
  $ws5  output $d_main
  $ws6  output $d_ext
  $ws7  output $d_ext
  $ws8  output $d_ext
  $ws9  output $d_ext
  $ws10 output $d_ext
}

# sway options
font pango:Comfortaa SemiBold 10

xwayland enable
workspace_layout default
smart_borders off
titlebar_padding 1 1
focus_follows_mouse no
focus_on_window_activation none
focus_wrapping workspace
title_align center
default_border pixel 2px
#workspace_auto_back_and_forth yes
input type:keyboard xkb_numlock enabled

gaps {
  outer 0px
  inner 0px
}

client.focused   #191724 #191724 #c4a7e7 #191724 #191724
client.unfocused #26233a #26233a #e0def4 #26233a #26233a

bar {
  id 0
  mode dock
  modifier $mod
  height 18px
  position top
  status_command while date +'bat: '$(cat /sys/class/power_supply/BAT0/capacity)'   %d/%m/%Y %H:%M '; do sleep 5; done

  colors {
    statusline #c4a7e7
    background #191724
    binding_mode #00000000 #00000000 #c4a7e7
    focused_workspace  #00000000 #00000000 #c4a7e7
    active_workspace #00000000 #00000000 #c4a7e7
    inactive_workspace #00000000 #00000000 #908caa
  }
}

bindsym {
  # move tiles
  $mod+$left        focus left
  $mod+$down        focus down
  $mod+$up          focus up
  $mod+$right       focus right
  $mod+Shift+$left  move  left
  $mod+Shift+$down  move  down
  $mod+Shift+$up    move  up
  $mod+Shift+$right move  right

  # manage sway
  $mod+q kill
  $mod+Shift+r reload
  $mod+Shift+e exec swaynag -t warning -m 'Exit Sway?' -B 'Yes' 'swaymsg exit'

  # manage tiles
  $mod+f fullscreen
  $mod+Shift+space floating toggle
  $mod+space focus mode_toggle
  $mod+Tab layout tabbed

  # split tiles
  $mod+b splith
  $mod+v splitv

  # launch apps
  $mod+Return exec $term
  $mod+d exec $menu
  Print exec "flatpak run org.flameshot.Flameshot gui --path ~/Pictures/Screenshots/ --raw | wl-copy"

  # resize mode
  $mod+r mode "resize"

  # manage workspaces
  $mod+1 workspace number $ws1
  $mod+2 workspace number $ws2
  $mod+3 workspace number $ws3
  $mod+4 workspace number $ws4
  $mod+5 workspace number $ws5
  $mod+6 workspace number $ws6
  $mod+7 workspace number $ws7
  $mod+8 workspace number $ws8
  $mod+9 workspace number $ws9
  $mod+0 workspace number $ws10
  $mod+Shift+1 move container to workspace number $ws1
  $mod+Shift+2 move container to workspace number $ws2
  $mod+Shift+3 move container to workspace number $ws3
  $mod+Shift+4 move container to workspace number $ws4
  $mod+Shift+5 move container to workspace number $ws5
  $mod+Shift+6 move container to workspace number $ws6
  $mod+Shift+7 move container to workspace number $ws7
  $mod+Shift+8 move container to workspace number $ws8
  $mod+Shift+9 move container to workspace number $ws9
  $mod+Shift+0 move container to workspace number $ws10

  # manage audio
  XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +1% && $refresh_i3status
  XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -1% && $refresh_i3status
  XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle && $refresh_i3status
  XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle && $refresh_i3status

  # manage brightness
  XF86MonBrightnessUp exec --no-startup-id brightnessctl s 10%+
  XF86MonBrightnessDown exec --no-startup-id brightnessctl s 10%-

  # lock & suspend
  $mod+s exec swaylock -f -c 000000
  #--locked $mod+d exec ~/Scripts/toggledisplay.sh
}

mode "resize" {
  bindsym $left resize shrink width 10px
  bindsym $down resize grow height 10px
  bindsym $up resize shrink height 10px
  bindsym $right resize grow width 10px
  bindsym Escape mode "default"
}

for_window [class="Pinentry-gtk"] floating enable
for_window [title="Picture-in-Picture"] floating enable

include /etc/sway/config.d/*
